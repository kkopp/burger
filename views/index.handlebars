<h1>Eat-Da-Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <div>
                        <li>
                            {{this.id}}. {{this.burger_name}}
                            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                                <button type="submit" class='burgerAvailable'> Devour It! </button>
                            </form>
                        </li>
                    </div>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col s6">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="YUMMY">
            <button type="submit" class="addBurgerButton">Add New Burger</button>
        </form>
    </div>
</div>